.header {
  position: relative;
}

.header .headline {
  padding: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  color: #fff;
  text-shadow: 1px 1px 2px #333;
}

.header .headline .title {
  font-size: 40rpx;
}

.header .headline .monicker {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.header .headline .monicker .author {
  font-size: 28rpx;
}

.section {
  padding: 32rpx;
}

.section .record {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section .record .star {
  padding-left: 56rpx;
  background-repeat: no-repeat;
  font-size: 36rpx;
}

.section .record .chase {
  background-image: url(data:image/svg+xml;base64,);
}

.section .record .chased {
  background-image: url(data:image/svg+xml;base64,);
}

.section .record .chapter {
  padding: 20rpx 20rpx;
  width: 240rpx;
  border-radius: 48rpx;
  text-align: center;
  background-color: #fb7299;
  color: #fff;
  font-size: 28rpx;
}

.state .p {
  font-size: 24rpx;
  color: #999;
  margin: 20rpx 0;
  position: relative;
}

.state .p .down {
  font-size: 28rpx;
  position: absolute;
  bottom: -4rpx;
  right: 0;
}

.state .synopsis {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.state .alls .all {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.state .alls .all .total {
  font-size: 32rpx;
}

.state .alls .all .order {
  font-size: 28rpx;
  padding-left: -20rpx;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
}

.state .alls .all .ascending {
  display: inline-block;
  height: 32rpx;
  width: 32rpx;
  background-image: url(data:image/svg+xml;base64,);
}

.state .alls .all .descending {
  display: inline-block;
  height: 32rpx;
  width: 32rpx;
  background-image: url(data:image/svg+xml;base64,);
}

.state .alls .entire {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.state .alls .entire .only {
  margin: 6rpx;
  width: 156rpx;
  height: 72rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 72rpx;
  border: 2rpx solid #ccc;
}

.state .alls .entire .only.active {
  color: #fff;
  background-color: #fb7299;
  border: 2rpx solid #fb7299;
}

.discussion {
  margin: 20rpx 0;
  font-size: 32rpx;
}

.swiper {
  display: flex;
  overflow: auto;
}

.swiper .content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 1px solid #dfdfdf;
}

.swiper .c-top {
  display: flex;
  align-items: center;
  margin: 0 0 16rpx;
}

.swiper .c-top .name {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #666;
}

.swiper .message {
  width: 550rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.like-contetn {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.like-contetn .like-title {
  width: 198rpx;
  margin-top: 12rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.like-contetn .update {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0 20rpx;
}
